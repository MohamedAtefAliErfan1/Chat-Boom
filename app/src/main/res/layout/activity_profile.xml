<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".profile">
   <de.hdodenhof.circleimageview.CircleImageView
       android:id="@+id/imgpro"
       android:layout_width="200dp"
       app:civ_border_width="2dp"
       app:civ_border_color="#fff"
       android:layout_gravity="center"
       android:layout_height="200dp"
       android:layout_marginTop="31dp"
       android:src="@drawable/profilewhite" />
    <TextView
        android:id="@+id/txtproname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgpro"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Keep on touch user"
        android:textColor="#fff"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/txtprostat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtproname"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Hey ,i'm using keep in touch app"
        android:textColor="#eee"
        android:textStyle="bold|italic" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center"
      android:gravity="center"
      android:layout_margin="15dp"
      android:orientation="horizontal">
      <Button
          android:id="@+id/btnsendrequest"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"

          android:background="@drawable/logshape"
          android:layout_weight="2"
          android:text="Send friend request"
          android:layout_margin="5dp"
          android:textAllCaps="false"
          android:textColor="#fff" />

      <Button
          android:id="@+id/btnreject"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="2"
          android:background="@drawable/signshape"
          android:gravity="center"
          android:layout_margin="5dp"
          android:text="Reject friend request "
          android:textAllCaps="false"
          android:textColor="#fff"
          android:visibility="visible" />
  </LinearLayout>

</LinearLayout>